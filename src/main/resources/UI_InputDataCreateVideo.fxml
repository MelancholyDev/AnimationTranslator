<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="CreateVideoInputController">
    <top>
        <Label maxWidth="Infinity" alignment="TOP_CENTER">
            <text>Input your data</text>
            <font>
                <Font name="Arial" size="20">
                </Font>
            </font>
            <padding>
                <Insets top="20"/>
            </padding>
        </Label>
    </top>
    <center>
        <VBox maxWidth="Infinity" alignment="CENTER" spacing="20">
            <HBox alignment="CENTER" spacing="20">
                <Button alignment="CENTER" text="Choose sound" onAction="#chooseSound"/>
                <Label minWidth="150" maxWidth="150" text="Your sound path is empty!" fx:id="soundPath"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Choose image" onAction="#chooseImage"/>
                <Label minWidth="150" maxWidth="150" text="Your image path is empty!" fx:id="imagePath"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <RadioButton alignment="CENTER" fx:id="chooseSubtitlesRadioButton" text="Add subtitles"
                             onAction="#showChooseSubtitles"/>
                <Button visible="false" text="Add subtitles" fx:id="chooseSubtitlesButton" onAction="#chooseSubtitles"/>
                <Label visible="false" minWidth="150" maxWidth="150"
                       text="Your subtitles path is empty!" fx:id="subtitlesPath"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Choose folder" onAction="#chooseFolder"/>
                <Label minWidth="150" maxWidth="150" text="Your image path is empty!" fx:id="folderPath"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="20">
            <Button alignment="CENTER" fx:id="continueButton" prefHeight="20" prefWidth="100" onAction="#openGenerateVideoMenu">
                <text>Generate!</text>
                <font>
                    <Font name="Arial" size="11">
                    </Font>
                </font>
            </Button>
            <Label/>
        </VBox>
    </bottom>
</BorderPane>
