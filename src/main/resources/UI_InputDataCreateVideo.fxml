<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="CreateVideoInputController">
    <top>
        <Label maxWidth="Infinity" alignment="TOP_CENTER">
            <text>Input your data</text>
            <font>
                <Font name="Arial" size="20">
                </Font>
            </font>
            <padding>
                <Insets top="20"/>
            </padding>
        </Label>
    </top>
    <center>
        <VBox maxWidth="Infinity" alignment="CENTER" spacing="20">
            <HBox alignment="CENTER" spacing="20">
                <Button alignment="CENTER" text="Choose sound" onAction="#chooseSound"/>
                <Label fx:id="soundPath"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Choose image" onAction="#chooseImage"/>
                <Label fx:id="imagePath"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <RadioButton alignment="CENTER" fx:id="chooseSubtitlesRadioButton" text="Add subtitles"
                             onAction="#showChooseSubtitles"/>
                <Button visible="false" text="Add subtitles" fx:id="chooseSubtitlesButton" onAction="#chooseSubtitles"/>
                <Label visible="false" fx:id="subtitlesPath"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <BorderPane>
            <right>
                <Button text="Check!" >
                    <padding>
                        <Insets right="20" bottom="20"/>
                    </padding>
                </Button>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
